<div class="row">
  {{#each loans}}
  <div class="col-md-3 m-5">
    <div class="card">
      <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center text-dark">
          <h4>{{loan}}</h4>
          <a href="/loans/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </div>
        <p>{{ description }}</p>
        <!-- DELETE REQUEST -->
        <form action="/loans/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p class="lead">Aun no tienes prestamos</p>
      <a href="/loans/add" class="btn btn-success btn-block">Solicitar un prestamo</a>
    </div>
  </div>
  {{/each}}
</div>